GOCMD=go
GOBUILD=$(GOCMD) build
GOCLEAN=$(GOCMD) clean
GOTEST=$(GOCMD) test
GOGET=$(GOCMD) get
BINARY_NAME=nks
BINARY_UNIX=$(BINARY_NAME)_unix

all: test build
build: 
	deps
	$(GOBUILD) -o $(BINARY_NAME) -v
test: 
	$(GOTEST) -v ./...
clean: 
	$(GOCLEAN)
	rm -f $(BINARY_NAME)
	rm -f $(BINARY_UNIX)
run:
	$(GOBUILD) -o $(BINARY_NAME) -v ./...
	./$(BINARY_NAME)
deps:
	$(GOGET) github.com/NetApp/nks-sdk-go/nks
	$(GOGET) github.com/spf13/cobra
	$(GOGET) github.com/mitchellh/go-homedir
	$(GOGET) github.com/mitchellh/mapstructure
	$(GOGET) github.com/spf13/viper

# Cross compilation
build-linux:
		CGO_ENABLED=0 GOOS=linux GOARCH=amd64 $(GOBUILD) -o $(BINARY_UNIX) -v
docker-build:
		docker run --rm -it -v "$(GOPATH)":/go -w /go/src/gitlab.com/sgryczan/nks-cli/nks golang:latest go build -o "$(BINARY_UNIX)" -v